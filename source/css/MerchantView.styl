.merchantView
  .merchantViewSnapshot
    float left
    width 300px
    padding 15px 20px
    margin-right 20px
    background-color rgba(255,255,255,0.1)

    .merchantViewSnapshotPrimary
      position relative
      padding-left 10px
      margin-bottom 15px

      .merchantViewSnapshotPrimaryTier
        position absolute
        top 0px
        right 0px
        padding 10px 15px
        background-color #b4d455
        color #000
        font-size 12px
        font-weight bold
        text-transform uppercase

      .merchantViewSnapshotPrimaryName
        font-size 22px
        font-weight bold

      .merchantViewSnapshotPrimaryId
        color #AAA
        font-size 14px


  .merchantViewSnapshotSection
    margin 10px 0px
    padding 10px 15px
    background-color #111

    .merchantViewSnapshotSectionEntry
      padding-bottom 10px

      .merchantViewSnapshotSectionEntryTitle
        font-size 11px
        color #999

      .merchantViewSnapshotSectionEntryAnswer
        font-size 14px

  .merchantViewContent
    float left
    width calc(100% - 320px)

    .merchantViewContentButton
      float left
      width calc(33.33% - 20px)
      background-color rgba(255,255,255,0.1)
      text-align center
      padding 15px 30px
      margin 0px 10px
      margin-bottom 20px

    .merchantViewContentTitle
      font-size 16px
      font-weight bold
      margin-bottom 15px

    .merchantViewContentSection
      padding-bottom 10px

      .merchantViewContentSectionPaymentType
        margin 10px

        .merchantViewContentSectionPaymentTypeAction
          float left
          background-color darken(#1a33cc, 65%)
          color #fff
          border-radius 2px
          padding 10px 15px
          margin-right 10px
          cursor pointer

          .merchantViewContentSectionPaymentTypeActionText
            float left
            padding-top 3px

          .merchantViewContentSectionPaymentTypeActionIcon
            float left

            img
              width 30px
              padding-left 10px

        .merchantViewContentSectionPaymentTypeActionSelected
          background-color darken(#1a33cc, 15%)

      .merchantViewContentSectionGenerated
        padding 15px 20px
        background-color rgba(255,255,255,0.1)
        margin-bottom 10px

        .merchantViewContentSectionGeneratedEntry
          padding-bottom 10px

          .merchantViewContentSectionGeneratedEntryTitle
            font-weight bold
            padding-bottom 5px

          .merchantViewContentSectionGeneratedEntryToggleSwitch
            float left

          .merchantViewContentSectionGeneratedEntryToggleText
            float left
            padding-left 10px
            padding-top 4px

.code
  padding 10px 15px
  font-family mono
  line-height 1.5
  border-radius 3px
  border 1px solid border-gray
  background-color #555
  margin 5px 0px
