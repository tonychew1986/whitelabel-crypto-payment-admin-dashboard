.toast
  font-weight bold
  padding 10px 15px

@keyframes popUp {
  from {
    opacity: 1;
    transform: translateY(200%);
  }

  to {
    opacity: 1;
  }
}

.popUp {
  animation-name: popUp;
}

@keyframes popOut {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
    transform: translateY(200%);
  }
}

.popOut {
  animation-name: popOut;
}

.animate{
  animation-duration: 800ms;
}
